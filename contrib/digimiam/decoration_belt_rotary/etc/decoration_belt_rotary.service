[Unit]
Description=Decoration belt rotary node daemon
After=network-online.target

[Service]
Type=simple

ExecStart=/home/pi/venv_justrelax/bin/twistd -n --pidfile=/var/run/decoration_belt_rotary.pid --logger=justrelax.common.logging_utils.DisableTwistdLogs -o chopsticks -c /etc/justrelax/decoration_belt_rotary.yaml

TimeoutStopSec=15

[Install]
WantedBy=multi-user.target