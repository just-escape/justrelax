[Unit]
Description=Rotary node daemon
After=network-online.target

[Service]
Type=simple

ExecStart=/home/pi/venv_justrelax/bin/twistd -n --pidfile=/var/run/rotary.pid --logger=justrelax.common.logging_utils.DisableTwistdLogs -o rotary -c /etc/justrelax/rotary.yaml

TimeoutStopSec=15

[Install]
WantedBy=multi-user.target
